<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jinyoungkim.albaalza.UI.Alba.MainActivity">

    <!--main_fragment-->
    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_above="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <View
        android:background="@color/line"
        android:layout_above="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <!--tab buttons-->
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/tab"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_margin="25dp"
            android:id="@+id/tab_home"
            android:src="@drawable/tab_home"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:layout_margin="25dp"
            android:id="@+id/tab_myalba"
            android:src="@drawable/tab_myalba"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:layout_margin="25dp"
            android:id="@+id/tab_albating"
            android:src="@drawable/tab_albating"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:layout_margin="25dp"
            android:id="@+id/tab_labor"
            android:src="@drawable/tab_labor"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:layout_margin="25dp"
            android:id="@+id/tab_setting"
            android:src="@drawable/tab_setting"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

</RelativeLayout>
